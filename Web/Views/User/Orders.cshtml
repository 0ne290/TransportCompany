@model IEnumerable<Application.Dtos.OrderResponseDto>

@{
    ViewBag.Title = "User orders";
    Layout = "_Layout";
}

@section Links {
    <link rel="stylesheet" href="/css/ordersSite.css">
}

<table class="table">
	<thead>
	<tr>
		<th>ID</th>
		<th>Дата начала</th>
		<th>Дата завершения</th>
		<th>Место назначения</th>
		<th>Цена</th>
		<th>Объем груза</th>
		<th>Масса груза</th>
	</tr>
	</thead>
	<tbody>
    @foreach (var order in Model)
    {
        <tr><td>@order.Guid</td><td>@order.DateBegin</td><td>@(order.DateEnd?.ToString() ?? "В процессе")</td><td>@order.Address</td><td>@order.Price</td><td>@order.CargoVolume</td><td>@order.CargoWeight</td></tr>
    }
	</tbody>
</table>